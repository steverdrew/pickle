<div class="row">
	<div class="span7">	
		<% if @user.errors.any? %>
    		<% for message in @user.errors.full_messages %>		
      			<li><%= message %></li>
    		<% end %>
		<% end %>
		<div class="well">
			<%= form_for(@user,:html => { :class => "form-horizontal"}) do |f| %>
				<fieldset>		
					<legend><%= t 'new.user.form.legend' %></legend>
						<div class="control-group">
							<label class="control-label" for="input01"><%= t 'new.user.form.first_name' %></label>
							<div class="controls">
							  <input type="text" class="input-xlarge" id="first_name">
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="input01"><%= t 'new.user.form.last-name' %></label>
							<div class="controls">
							  <input type="text" class="input-xlarge" id="last_name">
							</div>
						</div>
						<div class="control-group">
							<%= f.label :email,t('new.user.form.email'), class: "required control-label" %>
							<div class="controls">
								<%= f.text_field :email, class: "required input-xlarge" %>
							</div>
							<div class="controls">
								<p class="help-block"><%= t 'new.user.form.email_help' %></p>
								<%= f.text_field :email_confirmation, class: "input-xlarge" %>
							</div>
						</div>	
						<div class="control-group">
							<%= f.label :password,t('new.user.form.password'), class: "required control-label"%>
							<div class="controls">
    							<%= f.password_field :password, class: "input-xlarge" %>
							</div>
							<div class="controls">
								<p class="help-block"><%= t 'new.user.form.password_help' %></p>
					    		<%= f.password_field :password_confirmation, class: "input-xlarge" %>
							</div>
						</div>
						<div class="control-group">
							<div class="controls">
								<label class="checkbox">
				            		<input type="checkbox" name="terms-check" value="terms">
				            		<%= t 'new.user.form.property_owner' %>
				          		</label>
								<label class="checkbox">
				            		<%= f.check_box :terms_accepted%> 

				            		<%= t 'new.user.form.register_terms' %>
				          		</label>
							</div>
						</div>
						<div class="control-group">
							<div class="control-group">
								<div class="controls">
									<%= f.submit t('new.user.form.register_now'), class: "btn btn-primary" %>
									<%= link_to "Cancel", root_path %>
								</div>
							</div>
						</div>	
				</fieldset>		
			<% end %>	
		</div>
	</div>
	<div class="span5">	
		<div class="well">
			<form class="form-horizontal">
				<fieldset>
					<legend>Already using one of these?</legend>
					<p class="help-block">Select an existing provider for a no hassle sign up!</p>
				</fieldset>
			</form>
		</div>
	</div>
</div>

				